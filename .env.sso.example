# SSO Configuration for Frontend
# Copy this file to .env.local and fill in your Azure AD values

# Existing API Configuration
VITE_API_URL=http://localhost:8001
VITE_API_VERSION=v1
VITE_ENVIRONMENT=local

# Azure AD / Entra ID Configuration
# Get these values from your Azure AD app registration
VITE_AZURE_TENANT_ID=your-tenant-id-here
VITE_AZURE_CLIENT_ID=your-client-id-here

# SSO Redirect URI (must match Azure AD app registration)
# For local development
VITE_SSO_REDIRECT_URI=http://localhost:5173/callback

# For production
# VITE_SSO_REDIRECT_URI=https://your-domain.com/callback

# Optional: Override API scopes if using custom API permissions
# VITE_API_SCOPES=api://your-client-id/access_as_user

# Feature Flags
VITE_ENABLE_STREAMING=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SSO=true

# Timeouts (in milliseconds)
VITE_API_TIMEOUT=30000
VITE_STREAMING_TIMEOUT=60000

# WebSocket Configuration (if using)
VITE_WS_URL=ws://localhost:8001